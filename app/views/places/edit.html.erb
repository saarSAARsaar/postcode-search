<h1>Edit Description of <%= @place.name %> </h1>

<%= form_with model: @place, local: true do |form| %>
 
  <% if @place.errors.any? %>
  <div id="error_explanation">
    <h2>
    <%= pluralize(@place.errors.count, "error") %> prohibited
    this place description from being saved:
    </h2>
    <ul>
    <% @place.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
 
  <div class="form-group mb-0"> 
  <%= form.label :description %><br>
